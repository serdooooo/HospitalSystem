@using MvcProject.Models
@model List<Doctor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Doktor Listesi</h2>
<table>
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.Name</td>
    <td>@x.Surname</td>
    <td>@x.Phone</td>
    <td>@x.Email</td>
    <td><a href="/Doctor/DoctorDelete/@x.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Doctor/DoctorGet/@x.ID" class="btn btn-warning">Duzenle</a></td>
</tr>

    }
</table>
<br />
<a class="btn btn-primary" href="/Doctor/DoctorAdd">Yeni Doktor Ekle</a>